<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:id="@+id/ll_date"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/light_grey_bg">

                <TextView
                    android:id="@+id/tv_day"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:fontFamily="@font/helvetica_semi_bold"
                    android:gravity="center"
                    android:text="Mon"
                    android:textColor="@color/color_orange"
                    android:textSize="22sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_open_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/item_otp_bottom"
                app:fontFamily="@font/helvetica_ultra_light"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="Closed"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:visibility="visible" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/tv_open_status"
                android:layout_toEndOf="@+id/ll_date"
                android:layout_toRightOf="@+id/ll_date"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            style="@style/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            app:fontFamily="@font/helvetica_medium"
                            android:gravity="center|start"
                            android:text="@string/from_time"
                            android:textColor="@color/edit_txt"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/helvetica_medium"
                            android:text=":" />

                        <TextView
                            android:id="@+id/tv_from_time"
                            style="@style/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="5"
                            app:fontFamily="@font/helvetica_light"
                            android:gravity="center|start"
                            android:text="@string/gallery"
                            android:textColor="@color/edit_txt_hint"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <TextView
                            style="@style/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            app:fontFamily="@font/helvetica_medium"
                            android:gravity="center|start"
                            android:text="@string/to_time"
                            android:textColor="@color/edit_txt"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/helvetica_medium"
                            android:text=":" />

                        <TextView
                            android:id="@+id/tv_to_time"
                            style="@style/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="5"
                            app:fontFamily="@font/helvetica_light"
                            android:gravity="center|start"
                            android:text="@string/gallery"
                            android:textColor="@color/edit_txt_hint"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>