<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/card_view_net_banking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp"
    card_view:cardMaxElevation="3dp"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    card_view:cardUseCompatPadding="true"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_bank_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/item_credit_card_bg"
            android:drawablePadding="16dp"
            app:fontFamily="@font/helvetica_medium"
            android:hint="@string/bank_name"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="text|textNoSuggestions"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/edit_txt_hint"
            android:textColorHint="@color/edit_txt_hint"
            android:textSize="16sp" />



        <EditText
            android:id="@+id/et_account_number"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/item_credit_card_bg"
            android:digits="1234567890"
            android:drawablePadding="16dp"
            android:maxLines="1"
            android:singleLine="true"
            app:fontFamily="@font/helvetica_medium"
            android:hint="@string/account_number"
            android:inputType="number|textNoSuggestions"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/edit_txt_hint"
            android:textColorHint="@color/edit_txt_hint"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/et_branch_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/item_credit_card_bg"
            android:drawablePadding="16dp"
            app:fontFamily="@font/helvetica_medium"
            android:hint="@string/name_account"
            android:inputType="text|textNoSuggestions"
            android:paddingStart="10dp"
            android:layout_marginBottom="15dp"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/edit_txt_hint"
            android:textColorHint="@color/edit_txt_hint"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>