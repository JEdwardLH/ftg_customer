<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:cardMaxElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:fontFamily="@font/helvetica_light"
                    android:text="@string/refund_details"
                    android:textColor="@color/color_orange"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/view_clickable_color"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/by_price"
                    android:src="@drawable/ic_close_orange" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_grey_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        app:fontFamily="@font/helvetica_medium"
                        android:gravity="center|end"
                        android:text="@string/refund_date"
                        android:textColor="@color/edit_txt"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/helvetica_medium"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_refund_date"
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4"
                        app:fontFamily="@font/helvetica_light"
                        android:gravity="center|start"
                        android:text="@string/gallery"
                        android:textColor="@color/edit_txt_hint"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        app:fontFamily="@font/helvetica_medium"
                        android:gravity="center|end"
                        android:text="@string/transaction_id"
                        android:textColor="@color/edit_txt"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/helvetica_medium"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_transaction_id"
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4"
                        app:fontFamily="@font/helvetica_light"
                        android:gravity="center|start"
                        android:text="@string/gallery"
                        android:textColor="@color/edit_txt_hint"
                        android:textSize="13sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        app:fontFamily="@font/helvetica_medium"
                        android:gravity="center|end"
                        android:text="@string/transaction_fee"
                        android:textColor="@color/edit_txt"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/helvetica_medium"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_commission"
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4"
                        app:fontFamily="@font/helvetica_light"
                        android:gravity="center|start"
                        android:text="@string/gallery"
                        android:textColor="@color/edit_txt_hint"
                        android:textSize="13sp"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/offer_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        app:fontFamily="@font/helvetica_medium"
                        android:gravity="center|end"
                        android:text="@string/offer_amount"
                        android:textColor="@color/edit_txt"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/helvetica_medium"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_offer"
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4"
                        app:fontFamily="@font/helvetica_light"
                        android:gravity="center|start"
                        android:text="@string/gallery"
                        android:textColor="@color/edit_txt_hint"
                        android:textSize="13sp"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        app:fontFamily="@font/helvetica_medium"
                        android:gravity="center|end"
                        android:text="@string/delivery_fees"
                        android:textColor="@color/edit_txt"
                        android:textSize="14sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/helvetica_medium"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_delivery_fee"
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4"
                        app:fontFamily="@font/helvetica_light"
                        android:gravity="center|start"
                        android:text="@string/gallery"
                        android:textColor="@color/edit_txt_hint"
                        android:textSize="13sp"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp"
                        app:fontFamily="@font/helvetica_medium"
                        android:gravity="center|end"
                        android:text="@string/refund_amount"
                        android:textColor="@color/edit_txt"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/helvetica_medium"
                        android:text=":" />

                    <TextView
                        android:id="@+id/tv_refund_amount"
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="4"
                        app:fontFamily="@font/helvetica_light"
                        android:gravity="center|start"
                        android:text="@string/gallery"
                        android:textColor="@color/edit_txt_hint"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>