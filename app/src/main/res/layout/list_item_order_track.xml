<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toStartOf="@+id/tv_track"
            android:layout_toLeftOf="@+id/tv_track"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_restaurant_name"
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fontFamily="@font/helvetica_light"
                android:gravity="center|start"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Country of origin"
                android:textColor="@color/edit_txt"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_restaurant_address"
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:fontFamily="@font/helvetica_light"
                android:gravity="center|start"
                android:maxLines="2"
                android:singleLine="false"
                android:text="the manager of the country man womansgsgfdgfdgfsdggsgsdfgfsdgfdsgsdfgsdggd"
                android:textColor="@color/edit_txt_hint"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/tv_track"
            style="@style/default_button"
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/track_btn"
            android:drawableStart="@drawable/ic_location_small"
            android:drawableLeft="@drawable/ic_location_small"
            android:drawablePadding="2dp"
            android:elevation="3dp"
            android:gravity="center|start"
            app:fontFamily="@font/helvetica_medium"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:text="@string/track"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />


    </RelativeLayout>

</LinearLayout>
