<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:cardMaxElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        style="@style/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:fontFamily="@font/helvetica_light"
                        android:text="@string/filter"
                        android:textColor="@color/color_orange"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/view_clickable_color"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/by_price"
                        android:src="@drawable/ic_close_orange" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/textView"
                        android:id="@+id/title_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_working_hours"
                        android:layout_toStartOf="@+id/tv_working_hours"
                        app:fontFamily="@font/helvetica_ultra_light"
                        android:text="@string/description"
                        android:textColor="@color/edit_txt"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_working_hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textAllCaps="true"
                        android:text="@string/view_working_hours"
                        android:textColor="@color/color_orange"
                        android:textSize="16sp" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_food_description"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/helvetica_light"
                    android:gravity="center|start"
                    android:maxLines="100"
                    android:singleLine="false"
                    android:textColor="@color/edit_txt"
                    android:textSize="12sp" />


                <TextView
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/helvetica_ultra_light"
                    android:text="@string/pre_order"
                    android:textColor="@color/edit_txt"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_pre_order"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/helvetica_light"
                    android:gravity="center|start"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:textColor="@color/edit_txt"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/phone_label"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/helvetica_ultra_light"
                    android:text="@string/phone_number"
                    android:textAllCaps="true"
                    android:visibility="gone"
                    android:textColor="@color/edit_txt"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_phone_number"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/helvetica_light"
                    android:gravity="center|start"
                    android:maxLines="3"
                    android:visibility="gone"
                    android:singleLine="false"
                    android:textColor="@color/edit_txt"
                    android:textSize="12sp" />


                <TextView
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/helvetica_ultra_light"
                    android:text="@string/cancellation_policy"
                    android:textColor="@color/edit_txt"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_cancellation_policy"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/helvetica_light"
                    android:gravity="center|start"
                    android:maxLines="50"
                    android:singleLine="false"
                    android:textColor="@color/edit_txt"
                    android:textSize="12sp" />

                <TextView
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/helvetica_ultra_light"
                    android:text="@string/cancel_allowed"
                    android:textColor="@color/edit_txt"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_cancel_allowed"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/helvetica_light"
                    android:gravity="center|start"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:textColor="@color/edit_txt"
                    android:textSize="12sp" />

                <TextView
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/helvetica_ultra_light"
                    android:text="@string/refund_status"
                    android:textColor="@color/edit_txt"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_refund_status"
                    style="@style/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:fontFamily="@font/helvetica_light"
                    android:gravity="center|start"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:textColor="@color/edit_txt"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">


                    <TextView
                        android:id="@+id/tv_review_title"
                        style="@style/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:fontFamily="@font/helvetica_ultra_light"
                        android:text="@string/reviews"
                        android:textColor="@color/edit_txt"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_review_items"
                        style="@style/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/tv_view_all"
                        android:layout_toLeftOf="@+id/tv_view_all"
                        android:layout_toEndOf="@+id/tv_review_title"
                        android:layout_toRightOf="@+id/tv_review_title"
                        app:fontFamily="@font/helvetica_ultra_light"
                        android:text="@string/reviews"
                        android:textColor="@color/edit_txt"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="@string/home_view_all"
                        android:textColor="@color/color_orange"
                        android:textSize="16sp" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:scrollbars="none" />


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>


</LinearLayout>