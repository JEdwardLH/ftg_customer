<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="5dp">


    <TextView
        android:id="@+id/tv_order_id_txt"
        style="@style/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/tv_amount"
        android:layout_toLeftOf="@+id/tv_amount"
        app:fontFamily="@font/helvetica_light"
        android:gravity="center|start"
        android:text="@string/order_ids"
        android:textColor="@color/edit_txt"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_order_id"
        style="@style/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_id_txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        app:fontFamily="@font/helvetica_medium"
        android:gravity="center|start"
        android:textColor="@color/edit_txt_hint"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_order_date"
        style="@style/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_id"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="3dp"
        app:fontFamily="@font/helvetica_light"
        android:gravity="center|start"
        android:textColor="@color/edit_txt"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_amount"
        style="@style/textView"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toStartOf="@+id/tv_order_state"
        android:layout_toLeftOf="@+id/tv_order_state"
        app:fontFamily="@font/helvetica_medium"
        android:gravity="center"
        android:textColor="@color/color_orange"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_order_state"
        style="@style/textView"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_amount"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:fontFamily="@font/helvetica_medium"
        android:gravity="center"
        android:textColor="@color/color_orange"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_order_states"
        style="@style/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_order_state"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:fontFamily="@font/helvetica_medium"
        android:gravity="center"
        android:text="@string/applied"
        android:textColor="@color/color_orange"
        android:textSize="16sp" />


</RelativeLayout>
