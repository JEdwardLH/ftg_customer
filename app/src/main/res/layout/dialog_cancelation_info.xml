<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:cardMaxElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:fontFamily="@font/helvetica_light"
                    android:text="@string/filter"
                    android:textColor="@color/color_orange"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/view_clickable_color"
                    android:contentDescription="@string/by_price"
                    android:src="@drawable/ic_close_orange" />
            </RelativeLayout>
            <TextView
                style="@style/textView"
                android:id="@+id/tv_cancellation_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:fontFamily="@font/helvetica_ultra_light"
                android:text=""
                android:singleLine="false"
                android:maxLines="3"
                android:drawablePadding="3dp"
                android:textColor="@color/edit_txt"
                android:textSize="14sp" />
           <!-- android:drawableStart="@drawable/ic_info_grey"-->


            <TextView
                style="@style/textView"
                android:id="@+id/tv_cancellation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:fontFamily="@font/helvetica_medium"
                android:text="@string/cancellation_policy"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_cancellation_policy"
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:fontFamily="@font/helvetica_light"
                android:gravity="center|start"
                android:maxLines="3"
                android:singleLine="false"
                android:textColor="@color/edit_txt"
                android:textSize="13sp" />

            <TextView
                style="@style/textView"
                android:id="@+id/tv_phone_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                app:fontFamily="@font/helvetica_medium"
                android:text="@string/cancellation_policy"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_phone_txt"
                style="@style/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:fontFamily="@font/helvetica_light"
                android:gravity="center|start"
                android:maxLines="3"
                android:visibility="gone"
                android:singleLine="false"
                android:textColor="@color/edit_txt"
                android:textSize="13sp" />




        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>