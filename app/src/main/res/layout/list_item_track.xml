<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_view"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_status_image"
        style="@style/textView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@+id/right_view"
        android:layout_toLeftOf="@+id/right_view"
        android:layout_toEndOf="@+id/iv_status_image"
        android:layout_toRightOf="@+id/iv_status_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_order_status"
            style="@style/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontFamily="@font/helvetica_ultra_light"
            android:gravity="center|start"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textColor="#404040"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_date_time"
            style="@style/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:fontFamily="@font/helvetica_ultra_light"
            android:gravity="center|start"
            android:maxLines="2"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingEnd="5dp"
            android:singleLine="false"
            android:textColor="#404040"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/right_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_tick"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_driver_status"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/profile_default_pic"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_info_status"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_info"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

    </RelativeLayout>
</RelativeLayout>