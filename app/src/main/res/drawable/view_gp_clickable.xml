<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <corners android:radius="23dip" />
        <padding
            android:bottom="5dp"
            android:left="5dp"
            android:right="5dp"
            android:top="5dp" />
        <stroke
            android:width="1dip"
            android:color="#D34D40" />
        <gradient
            android:angle="-90"
            android:endColor="#D34D40"
            android:startColor="#D34D40" />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle">
        <corners android:radius="23dip" />

        <padding
            android:bottom="5dp"
            android:left="5dp"
            android:right="5dp"
            android:top="5dp" />
        <stroke
            android:width="1dip"
            android:color="#FFFFFF" />
        <gradient
            android:angle="-90"
            android:endColor="#FFFFFF"
            android:startColor="#FFFFFF" />
    </shape>
</item>
<item>
    <shape android:shape="rectangle">
        <corners android:radius="23dip" />

        <padding
            android:bottom="5dp"
            android:left="5dp"
            android:right="5dp"
            android:top="5dp" />
        <stroke
            android:width="1dip"
            android:color="#FFFFFF" />
        <gradient
            android:angle="-90"
            android:endColor="#FFFFFF"
            android:startColor="#FFFFFF" />
    </shape>
</item>
</selector>