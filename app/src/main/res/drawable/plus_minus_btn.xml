<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="0.5dip" />
            <stroke android:width="0.5dip" android:color="@color/edit_txt_hint" />
            <gradient android:angle="-90" android:endColor="@color/color_orange_light" android:startColor="@color/color_orange_light" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="0.5dip" />
            <stroke android:width="0.5dip" android:color="@color/edit_txt_hint" />
            <gradient android:angle="-90" android:endColor="@color/color_orange_light" android:startColor="@color/color_orange_light" />
            <solid android:color="@color/color_orange_light" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="0.5dip" />
            <stroke android:width="0.5dip" android:color="@color/edit_txt_hint" />
            <gradient android:angle="-90" android:endColor="@color/colorWhite" android:startColor="@color/colorWhite" />
        </shape>
    </item>
</selector>