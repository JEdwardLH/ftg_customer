<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="fontFamily">@font/helvetica_ultra_light</item>
        <item name="android:windowBackground">@color/app_theme_clr</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/helvetica_ultra_light</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:windowBackground">@color/app_theme_clr</item>
    </style>

    <style name="AppTheme.NoActionBarHome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>

    </style>


    <style name="AppTheme.SearchBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="appProgressBarStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
    </style>

    <style name="AppCompatProgressStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="RadioButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="RadioButtonAddressTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/grey_bubble</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/app_theme_clr</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeToolBar" parent="ThemeOverlay.AppCompat">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="editText" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/login_edit_size</item>
        <item name="fontFamily">@font/helvetica_light</item>
        <item name="android:textColor">@color/edit_txt</item>
        <item name="android:textColorHint">@color/edit_txt_hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:longClickable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center|left</item>
    </style>


    <style name="textView" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/helvetica_semi_bold</item>
        <item name="android:textSize">@dimen/login_edit_size</item>
        <item name="android:textColor">@color/edit_txt</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center|left</item>
    </style>


    <style name="default_button" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_btn_size</item>
        <item name="android:background">@drawable/cornor_rounded_orange_btn</item>
        <item name="fontFamily">@font/helvetica_bold</item>
        <item name="android:textSize">@dimen/login_edit_size</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="dialog_default_button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_btn_size</item>
        <item name="android:background">@drawable/view_clickable_color_nopad</item>
        <item name="fontFamily">@font/helvetica_bold</item>
        <item name="android:textSize">@dimen/login_edit_size</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="DatePickerThemeDialog" parent="android:Theme.Holo.Dialog">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="fontFamily">@font/helvetica_semi_bold</item>
        <item name="android:textColor">@color/edit_txt_hint</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="TimePickerThemeDialog" parent="android:Theme.Holo.Dialog">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:timePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="fontFamily">@font/helvetica_semi_bold</item>
        <item name="android:textColor">@color/edit_txt_hint</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>


    <style name="square_btn" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/square_orange_btn</item>
        <item name="fontFamily">@font/helvetica_bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DefaultDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


</resources>
